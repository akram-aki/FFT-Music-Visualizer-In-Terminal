{
  "name": "musicreader",
  "version": "1.0.0",
  "description": "Audio waveform visualizer",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "dist/musicReader.js",
  "scripts": {
    "build": "esbuild musicReader.ts --bundle --outfile=dist/musicReader.js --platform=node --format=cjs",
    "build:realtime": "esbuild realTimeVisualizer.ts --bundle --outfile=dist/realTimeVisualizer.js --platform=node --format=cjs",
    "build:both": "npm run build && npm run build:realtime",
    "start": "node dist/musicReader.js",
    "start:realtime": "node dist/realTimeVisualizer.js",
    "dev": "npm run build && npm run start",
    "dev:realtime": "npm run build:realtime && npm run start:realtime",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.19.1",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {}
}
